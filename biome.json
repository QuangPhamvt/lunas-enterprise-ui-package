{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "files": {
    "includes": [
      "packages/**/*.js",
      "packages/**/*.jsx",
      "packages/**/*.ts",
      "packages/**/*.tsx",
      "packages/**/*.json",
      "packages/**/*.css",
      "packages/**/*.scss",
      "packages/**/*.md"
    ]
  },
  "linter": {
    "enabled": true,
    "domains": {
      "react": "all"
    },
    "rules": {
      "recommended": true,
      "a11y": "off",
      "security": "on",
      "performance": {
        "recommended": true,
        "noReExportAll": "off"
      },
      "correctness": {
        "noChildrenProp": "off"
      },
      "complexity": {
        "recommended": true,
        "noExcessiveLinesPerFunction": "off"
      },
      "suspicious": {
        "recommended": true,
        "noUnknownAtRules": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "warn",
          "options": {
            "attributes": ["className", "class", "ngClass"],
            "functions": ["clsx", "cva", "tw", "tw.*"]
          }
        }
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              [":BUN:", ":NODE:"],
              ["react", "react-dom", "react-router", "react-hook-form"],
              ":BLANK_LINE:",
              "@hookform/resolvers",
              "@tanstack/react-table",
              "@tanstack/react-form",
              "@tanstack/react-router",
              "@tanstack/react-virtual",
              "@tanstack/zod-adapter",
              ":BLANK_LINE:",
              ["@dnd-kit/core", "@dnd-kit/modifiers", "@dnd-kit/sortable", "@dnd-kit/utilities"],
              ":BLANK_LINE:",
              "nanoid",
              "jotai",
              "lucide-react",
              "next-themes",
              "sonner",
              ["zod", "zod/**"],
              ":BLANK_LINE:",
              "@customafk/react-toolkit/**",
              "@customafk/lunas-sdk/**",
              "@customafk/lunas-dto/**",
              "@customafk/lunas-ui/**",
              ":BLANK_LINE:",
              "@/components/ui/**",
              "@/components/features/**",
              ":BLANK_LINE:",
              ["@/apis/**", "@/constants/**"],
              ":BLANK_LINE:"
            ]
          }
        }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf",
    "attributePosition": "auto",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "expand": "auto"
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5",
      "semicolons": null,
      "arrowParentheses": "asNeeded",
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 160,
      "lineEnding": "lf",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "attributePosition": "auto",
      "expand": "auto",
      "operatorLinebreak": "after"
    }
  }
}
